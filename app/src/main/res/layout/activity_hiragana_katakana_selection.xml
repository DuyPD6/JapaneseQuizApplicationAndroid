<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyScreen.HiraganaKatakanaSelectionActivity">
    <include

        layout="@layout/layout_header"/>
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="220dp"

        android:onClick="chooseHiragana"
        android:padding="@dimen/_1sdp"
        android:text="@string/hiragana"
        android:textColor="@color/black"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="220dp"
        android:onClick="chooseKatakana"
        android:text="@string/katakana"
        android:textColor="@color/black"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="155dp"
        android:layout_height="166dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="46dp"
        android:padding="@dimen/_5sdp"
        android:onClick="chooseKatakana"
        android:background="@drawable/black_border"

        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_kata" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="161dp"
        android:layout_height="166dp"
        android:onClick="chooseHiragana"
        android:layout_marginStart="25dp"
        android:layout_marginTop="247dp"
        android:layout_marginBottom="43dp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/black_border"

        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_hiraa" />

</androidx.constraintlayout.widget.ConstraintLayout>