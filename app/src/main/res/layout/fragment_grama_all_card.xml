<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dekiru.kenji.KenjiAllCardFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_card_dekiru_grama"
        android:id="@+id/rv_grama"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/rv_grama"
        app:layout_constraintBottom_toBottomOf="@id/rv_grama"
        app:layout_constraintStart_toStartOf="@id/rv_grama"
        app:layout_constraintEnd_toEndOf="@id/rv_grama"
        android:id="@+id/view"/>

</androidx.constraintlayout.widget.ConstraintLayout>